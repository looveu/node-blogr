        "cors": {
            "enabled": true,
            "priority": 31,
            "module": {
                "name": "path:./lib/middleware/cors",
                "arguments": [
                    ["gameand.me","127.0.0.1:8809"],
                    ["GET", "POST", "PUT"],
                    ["Authorization", "Content-Type"]
                ]
            }
        },
        "serverInfo": {
            "enabled": true,
            "priority": 32,
            "module": {
                "name": "path:./lib/middleware/serverInfo",
                "arguments": [
                    "SinoGemBidding",
                    "1.2.6"
                ]
            }
        },
        "apiHelper": {
            "enabled": true,
            "priority": 10,
            "module": {
                "name": "path:./lib/nm29/apiHelper",
                "arguments": []
            }
        },
        "validator": {
            "enabled": true,
            "priority": 32,
            "module": {
                "name": "path:./lib/middleware/validator",
                "arguments": []
            }
        },
        "appsec": {
            "module": {
                "arguments": [
                    {
                        "xframe": "SAMEORIGIN",
                        "p3p": false,
                        "csp": false
                    }
                ]
            }
        },
        /**
         * 只有/api层面不使用csrf
         */
        "csrf": {
            "enabled": true,
            "priority": 111,
            "route": "/((?!api))*",
            "module": {
                "name": "lusca",
                "method": "csrf",
                "arguments": [ {} ]
            }
        }
    }
