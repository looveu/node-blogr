    "account": {
        "utypes": {
            "SUPERADMIN":1,
            "ADMIN": 10,
            "DEVELOPER": 39,
            "PLANNER": 50,
            "EDITOR": 60,
            "VIP": 899,
            "NORMAL": 999
        }
    },

    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },

    "i18n": {
        "contentPath": "path:./locales",
        "fallback": "zh-CN"
    },
    "view engines": {
        "dust": {
            "module": "makara",
            "renderer": {
                "method": "dust",
                "arguments": [
                    { "cache": true, "helpers": "config:dust.helpers" }
                ]
            }
        }
    },
    
    

    "middleware": {
        
        "session": {
            "module": {
                "name": "express-session",
                "arguments": [
                    {
                        "key": "gm",
                        "secret": "1p0ro7uk6gbo00uqfeji1jfrs00fp2v28lqiv800bb298udmas400tr5h12nkifo001v046nquk4k8001u0ur3uuaqrg00t1mh0vqqaso001f1k394mp74o00",
                        "cookie": {
                            "path": "/",
                            "httpOnly": true,
                            "maxAge": 3600000
                        },
                        "resave": false,
                        "saveUninitialized": false
                    }
                ]
            }
        },
        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "kraken-devtools",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        
                        
                        "css": {
                            "module": "kraken-devtools/plugins/less",
                            "files": "/css/**/*.css"
                        },
                        
                        "browserify": {
                            "module": "kraken-devtools-browserify",
                            "files": "/js/**/*.js"
                        },
                        
                        "copier": {
                            "module": "kraken-devtools/plugins/copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        },
        "compress":{
            "enabled": true,
            "priority": 10,
            "module": "compression"
        },
        "passport": {
            "enabled": true,
            "priority": 31,
            "module": {
                "name": "path:./lib/middleware/passport",
                "arguments": [
                ]
            }
        },
        // "xml-parser": {
        //     "enabled": true,
